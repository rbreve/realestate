
<script type="text/javascript">
$('select.dropdown')
  .dropdown()
;
</script>

<div class="ui grid ">

<div class="four wide column ">

 
<div class="ui vertical menu large">

 
	  <% @categories.each do |category| %>
 
	 <a href="/home/?id=<%=category.id%>" class="item smallfont " ><%=category.name%><div class="ui label blue"><%=category.properties.count%></div></a>

	  
	  <%end%>

	  	 <a href="/home/" class="item smallfont">Listado Completo <div class="ui label"><%=@properties.count%></div></a>

	 
 	
   
</div>

</div>

<div class="twelve wide column ">


<form class="ui form">
	  <div class="fields">

	  	<div class="four wide field ui">
	    <%= collection_select(:property, :category_id, Category.all, :id, :name,{}, {class: "ui selection dropdown"}) %>
		</div>

		<div class="four wide field">
	     <%= collection_select(:property, :city_id, City.all, :id, :name,{}, {class: "ui selection dropdown"}) %>
		</div>


		<div class="two wide field">
		 <input type="submit" class="ui button" value="Filtrar">
		</div>
	</div>


</form>

<h2>
<%= @category %>
</h2>
<div class="ui link cards">
	 <% @properties.each do |property| %>

	 <div class="card">

		 <a class="image" href="/home/<%=property.id%>">	

			<%  property.photos.limit(1).each do |photo| %>
			 	<%= image_tag photo.image.url(:thumb) %>
			<% end %>  
		 </a>

	  <div class="content">

	    <a class="header"><%= property.category.name %></a>

	    <div class="meta">

	        
	    </div>

	    <div class="description">
	 	 <%= truncate(property.description, :length => 100)%>
	    </div>


	  </div>

	  <div class="extra content">

	    
	      <i class="bed icon"></i> <%=property.rooms%> Cuartos 
	       
 <div class="ui top right attached label blue">  <%=property.currency%> <%=property.price %></div>

 
  
 
	  </div>

	</div>
	  

	 <% end %>
</div>


</div>
